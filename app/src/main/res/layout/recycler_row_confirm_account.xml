<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    android:background="#E6E6E6"
>

    <TextView
        android:id="@+id/recyclerRow_confirmAccount_accountId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UserId"
        android:textSize="28sp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"></TextView>

    <TextView
        android:id="@+id/recyclerRow_confirmAccount_accountName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="userName"
        android:textSize="28sp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"></TextView>
    <TextView
        android:id="@+id/recyclerRow_confirmAccount_accountSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="userName"
        android:textSize="28sp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"></TextView>
    <TextView
        android:id="@+id/recyclerRow_confirmAccount_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="userName"
        android:textSize="28sp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"></TextView>

    <Button
        android:id="@+id/recyclerRow_confirmAccount_accountApprove_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textSize="18sp"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        app:cornerRadius = "7dp"></Button>

</LinearLayout>